@model LoginViewModel

@{ ViewData["Title"] = "Login";}

<h1>Login</h1>


@using (Html.BeginForm())
{

    <div class="form-group">
        @Html.EditorFor(model => model,
            new
            {
                htmlAttributes = new { @class = "form-control" }
            })
    </div>

    <div class="form-group">
        <input type="submit" value="Login" class="btn btn-primary" />
    </div>
}
